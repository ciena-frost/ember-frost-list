{{! Template for the frost-list-content-container component }}

{{#if pagination}}
  {{#frost-scroll
    hook=(concat hookPrefix '-scroll')
  }}
    {{#each items as |model index|}}
      {{yield model index}}
    {{else}}
      {{yield to="inverse"}}
    {{/each}}
  {{/frost-scroll}}
{{else if items}}
  {{#vertical-collection
    alwaysRemeasure=true
    bufferSize=bufferSize
    minHeight=minHeight
    items=items
    firstReached=onLoadPrevious
    lastReached=onLoadNext
    scrollPosition=scrollTop
    useContentProxy=false

    key='@identity'
    resizeDebounce=64
    firstVisibleChanged=null
    lastVisibleChanged=null
    didMountCollection=null
    idForFirstItem=null
    renderFromLast=false
    renderAllInitially=false
    shouldRender=true
    minimumMovement=15
    containerSelector=null
    containerHeight=null
    debug=debug

    as |model index|
  }}
    {{yield model index}}
  {{else}}
    {{yield to="inverse"}}
  {{/vertical-collection}}
{{/if}}
