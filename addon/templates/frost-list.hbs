{{#if config}}
  {{frost-list-core
    hook=hook
    items=config.items
    infinite=infinite
    onSelect=config.selection.onSelect
    item=(component config.component
    )
    expansion=(component 'frost-list-expansion'
      onCollapseAll=config.expansion.onCollapseAll
      onExpandAll=config.expansion.onExpandAll
    )
    sorting=(component 'frost-sort'
      sortOrder=config.sorting.activeSorting
      properties=config.sorting.properties
      onChange=config.sorting.onSort
    )
    alwaysUseDefaultHeight=alwaysUseDefaultHeight
    defaultHeight=defaultHeight
    loadPrevious=config.infiniteScroll.loadPrevious
    loadNext=config.infiniteScroll.loadNext
  }}
{{else}}
  {{frost-list-core
    alwaysUseDefaultHeight=alwaysUseDefaultHeight
    defaultHeight=defaultHeight
    hook=hook
    items=items
    infinite=infinite
    item=item
    expansion=expansion
    loadPrevious=loadPrevious
    loadNext=loadNext
    pagination=pagination
    sorting=sorting
    onSelect=onSelect
  }}
{{/if}}