{{frost-select-outlet
  hook='demo-select-outlet'
}}
{{notification-container position="top-right"}}

<div class='frost-modal-demo'>
  <div class='frost-modal-demos'>
    <div class='frost-modal-demo-title'>
      Demos
    </div>
    {{#frost-scroll
      class='frost-modal-demo-selectors'
      hook='demo-navigation-scroll'
    }}
      <div class='frost-modal-demo-selector-title'>
        Cookbook
        {{#link-to 'simple'}}Basic{{/link-to}}
        {{#link-to 'simple-loading'}}Basic - Loading{{/link-to}}
        {{#link-to 'infinite'}}Infinite{{/link-to}}
        {{#link-to 'infinite-loading'}}Infinite - Loading{{/link-to}}
        {{#link-to 'paged'}}Paged{{/link-to}}
        {{#link-to 'paged-loading'}}Paged - Loading{{/link-to}}
      </div>
    {{/frost-scroll}}
  </div>

  <div class='frost-modal-demo-example'>
    {{outlet}}
  </div>
</div>

